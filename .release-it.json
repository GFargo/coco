{
    "npm": {
      "publish": false
    },
    "github": {
      "publish": true,
      "release": true
    },
    "git": {
      "requireBranch": "main",
      "commitMessage": "chore: release v${version}"
    },
    "hooks": {
      "before:init": ["git pull", "npm run lint", "npm test"],
      "after:bump": "npx auto-changelog -p"
    }
  }
  